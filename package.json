{
  "name": "@adrianlafond/bugs",
  "version": "0.0.1",
  "description": "2D bug/insect/creature engine",
  "main": "./dist/bug.js",
  "scripts": {
    "test": "jest --coverage",
    "start": "npm run clean && concurrently npm:watch npm:serve",
    "clean": "shx rm -rf dist",
    "build": "esbuild src/index.ts --bundle --minify --sourcemap --target=chrome58,firefox57,safari11,edge16 --outfile=dist/bugs.js",
    "watch": "esbuild src/index.ts --bundle --watch --sourcemap --outfile=dist/bugs.js",
    "serve": "live-server --no-browser --watch=./dist/ --entry-file=./index.html",
    "lint": "ts-standard --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrianlafond/bugs.git"
  },
  "keywords": [
    "bug",
    "insect",
    "walk",
    "life"
  ],
  "author": "Adrian Lafond <mail@adrianlafond.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adrianlafond/bugs/issues"
  },
  "homepage": "https://github.com/adrianlafond/bugs#readme",
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "concurrently": "^8.0.1",
    "esbuild": "0.17.19",
    "jest": "^29.5.0",
    "live-server": "^1.2.2",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.0",
    "ts-standard": "^12.0.2",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@adrianlafond/geom": "^1.2.0"
  },
  "ts-standard": {
    "ignore": [
      "dist"
    ]
  }
}

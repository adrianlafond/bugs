{
  "name": "bugs",
  "version": "0.0.1",
  "description": "2D bug/insect/creature engine",
  "main": "./dist/bug.js",
  "scripts": {
    "test": "jest --coverage",
    "start": "npm run clean && concurrently \"npm run watch:bug\" \"npm run watch:skin\" \"npm run serve\"",
    "clean": "shx rm -rf dist",
    "build": "npm run clean && npm run build:bug && npm run build:skin",
    "build:bug": "webpack --config webpack.config.bug.js -p",
    "build:skin": "webpack --config webpack.config.bug.js -p",
    "watch:bug": "webpack --config webpack.config.bug.js --watch",
    "watch:skin": "webpack --config webpack.config.skin.js --watch",
    "test:watch": "jest --watchAll --coverage",
    "serve": "live-server --no-browser --open=./demo --watch=./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrianlafond/bugs.git"
  },
  "keywords": [
    "bug",
    "insect",
    "walk",
    "life"
  ],
  "author": "Adrian Lafond <mail@adrianlafond.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adrianlafond/bugs/issues"
  },
  "homepage": "https://github.com/adrianlafond/bugs#readme",
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "awesome-typescript-loader": "^5.2.1",
    "concurrently": "^4.1.0",
    "jest": "^23.6.0",
    "live-server": "^1.2.1",
    "shx": "^0.3.2",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.6",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "@adrianlafond/geom": "^1.1.3",
    "pixi.js": "^5.0.0-rc.2"
  }
}
